auth_enabled: false

server:
  http_listen_port: 3100
  grpc_listen_port: 9096

# https://github.com/grafana/loki/issues/5123#issuecomment-1188968570
query_scheduler:
  max_outstanding_requests_per_tenant: 10000
      
# https://github.com/grafana/loki/issues/5123#issuecomment-1188968570
frontend:
  max_outstanding_per_tenant: 10000

common:
  path_prefix: /var/lib/loki
  storage:
    filesystem:
      chunks_directory: /var/lib/loki/chunks
      rules_directory: /var/lib/loki/rules
  replication_factor: 1
  ring:
    instance_addr: 127.0.0.1
    kvstore:
      store: inmemory

schema_config:
  configs:
    - from: 2020-10-24
      store: boltdb-shipper
      object_store: filesystem
      schema: v11
      index:
        prefix: index_
        period: 24h

groups:
  rules:
    - alert: "backend_errors"
      expr: "sum(count_over_time({job=\"journal\",unit=\"aalto_2022_backend.service\"} | json | level = \"error\" [1h])) > 0"
      for: "1m"
      annotations:
        title: "Backend reported error!"
      labels:
        severity: "critical"

ruler:
  alertmanager_url: http://alertmanager:9093

analytics:
  reporting_enabled: false
